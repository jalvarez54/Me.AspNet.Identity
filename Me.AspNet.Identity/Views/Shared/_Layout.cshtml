                    <span class="icon-bar"></span>
                </button>
                <a href="~/Home" title="HOME - ASP.NET Identity"><img id="NavBarBrandImage" class="navbar-brand"  alt="Home" src="~/Content/images/MVC-Dev.jpg" > 
                    <span class="navbar-brand hidden-xs" style="font-size:large">Me ASP.NET Identity 2</span>
                    <span class="navbar-brand visible-xs" style="font-size:small">Me ASP.NET Identity 2</span>           
                </a>
            </div><!-- /.navbar-header -->
            <!-- /.navbar-top-links -->
            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-question-circle fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-messages">
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="divider"></li>
                            <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                            <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
                        }
                    </ul><!-- /.dropdown-messages -->

                </li>

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" title="Login/Logout User profile">
                        @if (Request.IsAuthenticated)
                        {
                            // http://www.itorian.com/2013/11/customize-users-profile-in-aspnet.html
                            var userManager = new UserManager<Me.AspNet.Identity.Models.ApplicationUser>
                                (new Microsoft.AspNet.Identity.EntityFramework.UserStore<Me.AspNet.Identity.Models.ApplicationUser>
                                (new Me.AspNet.Identity.Models.ApplicationDbContext()));

                            // Get the current logged in User and look up the user in ASP.NET Identity
                            var currentUser = userManager.FindById(User.Identity.GetUserId());
                            var image = "";

                            if (currentUser.AvatarUrl != null)
                            {
                                image = currentUser.AvatarUrl;
                            }
                            else
                            {
                                image = "~/Content/Avatars/BlankPhoto.jpg";
                            }

                            @currentUser.Pseudo <img id="login_photo" class="img-circle" style="float: left; padding-right:5px" height="35" width="35" src="@Url.Content(@image)" />
                        }
                        else
                        {
                            <i class="fa fa-user fa-fw"></i>
                        }
                        <i class="fa fa-caret-down"></i>

                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            @Html.Partial("_LoginPartial")
                        </li>
                    </ul>
                </li><!-- /.dropdown-user -->

                <li>@MyRazorHelpers.AddThis()</li>
            </ul><!-- /.navbar-top-links -->

            <!-- /.navbar-collapse sidebar-nav -->
