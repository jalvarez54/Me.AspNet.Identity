                                <li class="divider"></li>
                                <li class="nav-header"><i class="fa fa-video-camera"></i> Item 1.2</li>
                                <li>@Html.ActionLink("Item 1.2.1", "Index", "Home")</li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-file-text fa-fw"></i> Item 2<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>@Html.ActionLink("Item 2.1", "Index", "Home")</li>
                                <li>@Html.ActionLink("Item 2.2", "Index", "Home")</li>
