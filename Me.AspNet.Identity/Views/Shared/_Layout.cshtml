                                <li>@Html.ActionLink("Item 3.2", "Index", "Home")</li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Home")"><span><i class="fa fa-lock"></i> Item 4</span><span class="badge pull-right">@ViewBag.CountAcdfGuessBooks</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Home")"><i class="fa fa-lock"></i> <span>Item 5</span><span class="badge pull-right">@ViewBag.CountAspNetUsers</span></a>
                        </li>
                        <li>
                            <a href="https://acdfcasaV2.codeplex.com/" target="_blank"><i class="fa fa-code"></i> <span>Source Github</span> <i class="fa fa-external-link"></i></a>
                        </li>
                        <li>
                            <a href="~/ReadMe.txt" target="_blank"><i class="fa fa-code"></i> <span>Changeset</span> <i class="fa fa-external-link"></i></a>
                        </li>
                    </ul><!-- /#side-menu -->                    
                </div><!-- /.navbar-collapse sidebar-nav -->
            </div>
